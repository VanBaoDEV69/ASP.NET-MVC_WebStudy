@model IEnumerable<StudyWeb.Models.Test>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header" style="background-color: aqua;">
        <div class="row">
            <strong class="text-uppercase">Danh sách bài kiểm tra</strong>
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nameTest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.timeTest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateUpload)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.display)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subjects.subjectName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameTest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timeTest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateUpload)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.display)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subjects.subjectName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
