@model StudyWeb.Models.Lesson

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div id="project" class="project">
    <div class="container">

        <div class="card" style="background: rgba(0,0,0,0.5);">
            <div class="card-header">
                <h1 style="color: yellow">@Model.contentLesson</h1>
            </div>
        </div><br />
        <div style="text-align: right">
            <a style="padding: 10px; background-color: royalblue; color: white; margin-right: 30px" href="@Url.Action("Edit","Lessons", new { id = Model.id })">
                Sửa bài học
            </a>
            <a style="padding: 10px; background-color: red; color: white" href="@Url.Action("Delete","Lessons",new { id = Model.id })">
                Xóa bài học
            </a>
        </div>
        <br />
        <div>
            <center>
                <iframe style="height: 900px; width:900px; margin: 50px;" src="/LessonFile/@Model.linkLesson#toolbar=1" width="900" height="900"></iframe>
            </center>
        </div>
    </div>
</div>


<script src="//mozilla.github.io/pdf.js/build/pdf.js"></script>




<script src="~/Content/PDF/dpf.js"></script>

























