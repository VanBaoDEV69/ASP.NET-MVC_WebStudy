@model StudyWeb.Models.Lesson

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div>
    <p style="color: black; font-size: 20px">Bài học / Thêm mới</p>
    <a href="@Url.Action("index", "Classses")" class="add_posts">
        <h5><img height="24" width="24" src="~/Content/images/back.png" /> Quay lại</h5>
    </a>
</div>
<br />
<br />
@using (Html.BeginForm("Create", "Lessons", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="project" class="project">
        <div class="container">
            <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
                <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                    <div class="row">
                        <h1 style="color: white; margin-left: 30px">Thêm bài học</h1>
                    </div>
                </div>
                <div class="card-body">
                    <br />
                    <div class="row">
                        <div class="col-md-2" style="text-align: right">
                            <h4 style="color:white">Chương :</h4>
                        </div>
                        <div class="col-md-9" style="text-align: center">
                            @Html.DropDownList("idChapter", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idChapter, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2" style="text-align: right">
                            <h4 style="color:white">Nội dung :</h4>
                        </div>
                        <div class="col-md-9" style="text-align: center">
                            @Html.EditorFor(model => model.contentLesson, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.contentLesson, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2" style="text-align: right">
                            <h4 style="color:white">Tệp (PDF) :</h4>
                        </div>
                        <div class="col-md-9" style="text-align: left">
                            <input style="color: white; margin-right: 20px" type='file' name="fileUpload" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2" style="text-align: right">
                            <h4 style="color:white">Hiện thị :</h4>
                        </div>
                        <div class="col-md-9" style="text-align: center">
                            @Html.EditorFor(model => model.display)
                            @Html.ValidationMessageFor(model => model.display, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                </div>
                <div class="card-footer" style="text-align: right; height: 60px">
                    <button type="submit" class="add_posts" style="padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black">Tạo</button>
                </div>
            </div>
        </div>
    </div>
}



<style>

    .list-box {
        height: 35px;
        width: 100%;
    }

    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }

        .btn_a:hover {
            background: white;
            color: dodgerblue;
        }

    .css_card-body {
        color: white;
    }

    .card-footer {
        height: 50px;
    }

        .card-footer input {
            color: white;
        }

        .card-footer img:hover {
            height: 32px;
            width: 32px;
        }

    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }

    img {
        max-height: 440px;
        max-width: 540px;
    }

    .copyright {
        margin-top: 0;
    }
</style>



























